<div class="">
  <div class="container">
    <div class="row">
      <div class="">
        <h1 class="">password</h1>
        <%= form_with model: @recruit, {controller: 'recruits', action: "recruit_with_pass/#{@recruit.id}" }, local: true do |f| %>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
            <%= f.submit "送信", class: 'btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>