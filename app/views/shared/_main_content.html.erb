<%= form_with(url: search_recruits_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "ニックネーム検索", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>

<ul class="recruits">
  <% @recruits.each do |recruit| %>
    <%= render partial: "shared/recruit", locals: { recruit: recruit } %>
  <% end %>
</ul>